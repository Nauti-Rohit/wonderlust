<% layout("layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="col-6 offset-3">SignUP on Wonderlust</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="post" novalidate class="needs-validation">
      <div class="mb-3">
        <lable for="username" class="form-label"> Username </lable>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>

      <div class="mb-3">
        <lable for="email" class="form-label"> Email </lable>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <lable for="password" class="form-label"> Password </lable>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>

      <button class="btn btn-success add-btn mt-3 mb-3">SignUP</button>
    </form>
  </div>
</div>
